{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CUDA Build (OpenCV)",
            "type": "shell",
            "command": "nvcc",
            "args": [
                "-ccbin",
                "C:/Program Files (x86)/Microsoft Visual Studio/2019/BuildTools/VC/Tools/MSVC/14.29.30133/bin/Hostx64/x64",

                "-std=c++17",

                "-Xcudafe",
                "--diag_suppress=611",

                "-I",
                "E:/cuda_programs/vcpkg/installed/x64-windows/include/opencv4",

                "-L",
                "E:/cuda_programs/vcpkg/installed/x64-windows/lib",

                "${file}",

                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",

                "opencv_core4.lib",
                "opencv_imgproc4.lib",
                "opencv_imgcodecs4.lib",
                "opencv_highgui4.lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        }
    ]
}
